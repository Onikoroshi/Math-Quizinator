<%= form_for @problem do |f| %>
	<% if @problem.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@problem.errors.count, "error") %> prevented this Math Problem from being saved:</h2>
			<ul>
				<% @problem.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :question %><br>
		<%= f.text_area :question %>
	</p>

	<p>
		<%= f.label :answer %><br>
		<%= f.text_area :answer %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>